# Database Configuration
DATABASE_URL_DEVELOPMENT="postgresql://username:password@localhost:5432/school_management_dev"
DATABASE_URL_PRODUCTION="postgresql://username:password@your-vps.com:5432/school_management_prod"

# Server Configuration
NODE_ENV=development
PORT=3000
SERVER_ID=local_school_001
SERVER_TYPE=local

# Sync Configuration
REMOTE_SYNC_URL=https://your-vps.com/api/sync
SYNC_API_KEY=your_secure_api_key_here
AUTO_SYNC_INTERVAL=5

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password