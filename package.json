{
  "name": "school-management-sync",
  "version": "1.0.0",
  "description": "School Management System with Database Synchronization",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --noEmitOnError false",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "sync:trigger": "curl -X POST http://localhost:3000/api/sync/trigger",
    "sync:status": "curl http://localhost:3000/api/sync/status",
    "start:worker": "ts-node src/workers/reportGenerator.ts",
    "seed:production": "ts-node scripts/production-classes-seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.0",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "puppeteer": "^24.16.2",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "prisma": "^5.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "school-management",
    "database-sync",
    "offline-first",
    "postgresql",
    "prisma"
  ],
  "author": "Your Name",
  "license": "MIT"
}
